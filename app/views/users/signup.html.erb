<div class="columns">

  <%= form_with(model: @user, url: create_user_path, :class => 'column mx-auto is-three-quarters-mobile is-two-thirds-tablet is-half-desktop is-one-third-widescreen is-one-quarter-fullhd') do |f| %>
    <h1 class="is-size-1 my-4">Sign Up</h1>
    <div class="field">
      <label class="label">Email</label>

      <div class="control has-icons-left">
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        <%= f.text_field :email, class: 'input', required: true %>

        <% @user.errors[:email].each do |error| %>
          <p class="help is-danger"><%= error %></p>
        <% end %>
      </div>
    </div>

    <div class="field">
      <label class="label">Password</label>
      <div class="control">
        <%= f.password_field :password, class: 'input' %>
      </div>
    </div>

    <div class="field">
      <label class="label">Password Confirmation</label>
      <div class="control">
        <%= f.password_field :password_confirmation, class: 'input' %>
      </div>
    </div>

    <%= f.submit 'Sign Up', class: 'button is-primary my-4' %>
    <a href="<%= login_path %>" class="button is-primary is-outlined my-4">Login</a>
  <% end %>
</div>
